<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorSecondaryLight"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/item_tour_bg">

        <ImageView
            android:id="@+id/add_tour_cover_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:scaleType="fitXY"
            android:background="@drawable/item_tour_bg_img"
            android:src="@drawable/ic_profile_black"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_tour_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/add_tour_picture_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="150dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"
                android:text="Choose Image"
                android:textColor="#FFFFFF"
                android:background="@drawable/item_tour_bg_img"
                android:textSize="20sp"
                android:gravity="left"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>


    <EditText
        android:id="@+id/add_tour_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Tour Name"
        android:textColorHint="@color/colorAccent"
        android:textSize="50dp"
        android:textStyle="bold"
        android:inputType="text"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/add_location_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="City, State"
        android:textColorHint="@color/colorAccent"
        app:backgroundTint="@color/colorSecondaryLight"
        android:selectAllOnFocus="true"/>

    <EditText
        android:id="@+id/add_cost_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Cost in $"
        android:textColorHint="@color/colorAccent"
        android:inputType="numberDecimal"
        app:backgroundTint="@color/colorSecondaryLight"
        android:selectAllOnFocus="true"/>

    <EditText
        android:id="@+id/add_time_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="Estimated Time"
        android:textColorHint="@color/colorAccent"
        android:inputType="time"
        app:backgroundTint="@color/colorSecondaryLight"
        android:selectAllOnFocus="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="28dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:text="Attractions">
    </TextView>

    <ScrollView
        android:id="@+id/add_tour_attractions_sv"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Example Attraction 1"
                app:backgroundTint="@color/colorSecondaryLight"
                android:clickable="true">
            </EditText>
            <!--android:onClick="goToAttractionFunction"-->

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Example Attraction 2"
                app:backgroundTint="@color/colorSecondaryLight"
                android:clickable="true">
            </EditText>
            <!--android:onClick="goToAttractionFunction"-->

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Example Attraction 3"
                app:backgroundTint="@color/colorSecondaryLight"
                android:clickable="true">
            </EditText>
            <!--android:onClick="goToAttractionFunction"-->

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Example Attraction 4"
                app:backgroundTint="@color/colorSecondaryLight"
                android:clickable="true">
            </EditText>
            <!--android:onClick="goToAttractionFunction"-->

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Example Attraction 5"
                app:backgroundTint="@color/colorSecondaryLight"
                android:clickable="true">
            </EditText>
            <!--android:onClick="goToAttractionFunction"-->

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/add_error_tv"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/add_loading_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:weightSum="1.0">

        <Button
            android:id="@+id/add_add_attraction_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_gravity="center"
            android:layout_weight="0.33"
            android:enabled="true"
            android:text="Add Attraction"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:background="@color/colorSecondary" />
        <!--android:onClick="addAttractionFunction"-->

        <Button
            android:id="@+id/add_share_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_gravity="center"
            android:enabled="true"
            android:layout_weight="0.33"
            android:text="Share Tour"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimaryLight"/>
        <!--android:onClick="shareTourFunction"-->

        <Button
            android:id="@+id/add_submit_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="24dp"
            android:enabled="true"
            android:layout_weight=".33"
            android:text="Submit Tour"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimaryDark"/>
        <!--android:onClick="submitTourFunction"-->

    </LinearLayout>

</LinearLayout>